<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/msafiri_app_background_color">

    <android.support.v7.widget.CardView
        android:id="@+id/cardView3"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Display Bus Name"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                tools:layout_editor_absoluteX="9dp"
                tools:layout_editor_absoluteY="8dp" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="500,000 Tzs"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                tools:layout_editor_absoluteX="291dp"
                tools:layout_editor_absoluteY="7dp" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Check In : "
                tools:layout_editor_absoluteX="9dp"
                tools:layout_editor_absoluteY="42dp" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="07:00"
                tools:layout_editor_absoluteX="101dp"
                tools:layout_editor_absoluteY="79dp" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Departure : "
                tools:layout_editor_absoluteX="9dp"
                tools:layout_editor_absoluteY="79dp" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="06:00"
                tools:layout_editor_absoluteX="101dp"
                tools:layout_editor_absoluteY="42dp" />

            <TextView
                android:id="@+id/textView9"
                android:layout_width="87dp"
                android:layout_height="18dp"
                android:text="Available : "
                tools:layout_editor_absoluteX="195dp"
                tools:layout_editor_absoluteY="42dp" />

            <TextView
                android:id="@+id/textView10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="40 Seats"
                tools:layout_editor_absoluteX="310dp"
                tools:layout_editor_absoluteY="42dp" />

            <Button
                android:id="@+id/button"
                android:layout_width="114dp"
                android:layout_height="37dp"
                android:text="Book Me"
                android:textAllCaps="false"
                tools:layout_editor_absoluteX="186dp"
                tools:layout_editor_absoluteY="71dp" />

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="357dp"
                android:layout_height="96dp"
                app:srcCompat="@drawable/msafiri_app_buss_icon"
                tools:layout_editor_absoluteX="9dp"
                tools:layout_editor_absoluteY="131dp" />

            <TextView
                android:id="@+id/textView11"
                android:layout_width="98dp"
                android:layout_height="27dp"
                android:gravity="center"
                android:text="Like"
                tools:layout_editor_absoluteX="9dp"
                tools:layout_editor_absoluteY="242dp" />

            <TextView
                android:id="@+id/textView12"
                android:layout_width="100dp"
                android:layout_height="27dp"
                android:gravity="center"
                android:text="Reviews"
                tools:layout_editor_absoluteX="142dp"
                tools:layout_editor_absoluteY="242dp" />

            <TextView
                android:id="@+id/textView13"
                android:layout_width="91dp"
                android:layout_height="28dp"
                android:gravity="center"
                android:text="Comment"
                tools:layout_editor_absoluteX="277dp"
                tools:layout_editor_absoluteY="241dp" />

            <Button
                android:id="@+id/button3"
                android:layout_width="52dp"
                android:layout_height="39dp"
                android:text="4.5"
                tools:layout_editor_absoluteX="316dp"
                tools:layout_editor_absoluteY="71dp" />

        </android.support.constraint.ConstraintLayout>
    </android.support.v7.widget.CardView>
</android.support.constraint.ConstraintLayout>