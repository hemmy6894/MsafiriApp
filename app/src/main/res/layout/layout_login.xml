<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    tools:context="com.tanzania.comtech.msafiriapp.Activity_Login">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:transitionGroup="true"
        android:layout_margin="0dp">
        <ScrollView
            android:background="@drawable/back_img"
            android:layout_width="match_parent"
            android:padding="20dp"
            android:layout_height="match_parent">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">



                        <LinearLayout
                            android:padding="20dp"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:alpha="0.8"
                            android:layout_marginTop="20dp"
                            android:layout_gravity="center_horizontal"
                            android:background="#000"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/msafiri_App_logo"
                                android:layout_width="170dp"
                                android:layout_gravity="center_horizontal"
                                android:layout_height="wrap_content"
                                android:layout_margin="@dimen/layout_input_margin"
                                android:src="@drawable/logo_login" />

                            <AutoCompleteTextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:id="@+id/layout_login_edittext_enter_email"
                                android:hint=" Email"
                                android:inputType="textEmailAddress"
                                android:ems="10"
                                android:text="grand@gmail.com"
                                android:textColor="#fff"
                                android:drawableLeft="@android:drawable/ic_dialog_email"
                                android:alpha="0.618"
                                android:background="@android:color/transparent"
                                android:textColorHint="#fff"
                                android:layout_marginLeft="@dimen/layout_input_margin"
                                android:layout_marginRight="@dimen/layout_input_margin">
                            </AutoCompleteTextView>
                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:layout_marginLeft="8dp"
                                android:layout_marginTop="10dp"
                                android:layout_marginBottom="10dp"
                                android:layout_marginRight="20dp"
                                android:background="#fff"
                                android:layout_marginStart="8dp"
                                android:layout_marginEnd="20dp" />
                            <AutoCompleteTextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:id="@+id/layout_login_edittext_enter_password"
                                android:hint="@string/login_password_hint"
                                android:drawableLeft="@android:drawable/ic_lock_lock"
                                android:background="@android:color/transparent"
                                android:textColor="#fff"
                                android:alpha="0.618"
                                android:text="password"
                                android:textColorHint="#fff"
                                android:inputType="textPassword"
                                android:layout_marginLeft="@dimen/layout_input_margin"
                                android:layout_marginRight="@dimen/layout_input_margin">
                            </AutoCompleteTextView>
                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:layout_marginLeft="8dp"
                                android:layout_marginTop="10dp"
                                android:layout_marginBottom="10dp"
                                android:layout_marginRight="20dp"
                                android:background="#fff" />

                            <Button
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@drawable/btn_bg_red"
                                android:alpha="0.618"
                                android:textColor="#fff"
                                android:textSize="17sp"
                                android:layout_marginLeft="@dimen/layout_input_margin"
                                android:layout_marginRight="@dimen/layout_input_margin"
                                android:text="@string/login_button_String"
                                android:id="@+id/layout_login_button_login"
                                android:textAllCaps="false"
                                />
                            <Button
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@drawable/btn_bg_red_border"
                                android:textSize="17sp"
                                android:textColor="#fff"
                                android:alpha="0.618"
                                android:layout_marginTop="10dp"
                                android:layout_marginLeft="@dimen/layout_input_margin"
                                android:layout_marginRight="@dimen/layout_input_margin"
                                android:text="@string/login_button_register"
                                android:id="@+id/layout_login_button_regiter"
                                android:textAllCaps="false"
                                />

                            <ProgressBar
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:id="@+id/progress_bar"
                                android:visibility="gone"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:id="@+id/layout_login_hidden_sms"
                            android:visibility="gone"/>
                        </LinearLayout>

                </LinearLayout>
        </ScrollView>
    </android.support.v7.widget.CardView>
</LinearLayout>
