<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Helpers.ThanksActivity"
    android:orientation="vertical"
    android:background="#fff"
    android:gravity="center">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:text="PDF"
            android:background="#0000ff"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
            android:drawableLeft="@drawable/pdf_drawable"
            android:drawableStart="@drawable/pdf_drawable"
            android:padding="6dp"
            android:gravity="center"
            android:id="@+id/download_ticket_view"
            android:layout_margin="4dp"
            android:drawableTint="#ff0000"
            android:drawablePadding="5dp" />

        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:text="Print"
            android:gravity="center"
            android:layout_margin="4dp"
            android:drawableTint="#ff0000"
            android:id="@+id/print_ticket_view"
            android:background="#0000ff"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
            android:drawableLeft="@drawable/print_drawable"
            android:drawableStart="@drawable/print_drawable"
            android:padding="6dp"
            android:drawablePadding="5dp" />
    </LinearLayout>
    <WebView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/display_ticket_view"
        android:visibility="visible"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Downloading...\n Look at Notification\nWill Notify when complete"
        android:gravity="center"
        android:visibility="gone"
        android:id="@+id/downloading_text"
        android:textColor="#000"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAllCaps="true"
        android:text="Thank You !!!"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
        android:textStyle="bold"
        android:visibility="gone"
        android:textSize="35sp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:visibility="gone"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
        android:layout_margin="@dimen/activity_horizontal_margin"
        android:text="For using M-safiri App, we warmly welcome you again to use our service. Give us your feedback to make more improvement."/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Go Home"
        android:visibility="gone"
        android:id="@+id/thank_go_home"
        android:textAllCaps="false"/>
</LinearLayout>