<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent" android:orientation="vertical"
    android:id="@+id/pop_view_group"
    android:background="@drawable/pattern_darkblue_cyan"
    android:layout_margin="2dp"
    android:gravity="center">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="CHOOSE PAYMENT  METHOD"
        android:gravity="center"
        android:textColor="#fff"
        android:textAllCaps="true"
        android:textSize="18sp"
        android:textStyle="bold"
        android:padding="10dp"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="#fff"
        android:layout_marginBottom="10dp" />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center">

            <include layout="@layout/include_pay_by_code"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:padding="5dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/nmb"
                    android:layout_margin="7dp"
                    android:id="@+id/pay_by_api_nmp"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/visa"
                    android:layout_margin="7dp"
                    android:id="@+id/pay_by_visa"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/mastercard"
                    android:layout_margin="7dp"
                    android:id="@+id/pay_by_master"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:padding="5dp">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/paypal"
                    android:id="@+id/pay_by_api_tigo_pesa"/>


            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/linear_layout_conner_green"
                android:orientation="horizontal"
                android:layout_margin="@dimen/activity_horizontal_margin"
                android:padding="5dp">



            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>