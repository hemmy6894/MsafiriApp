<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent" android:gravity="center"
    android:visibility="gone"
    android:id="@+id/register_one">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:baselineAligned="false"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp">
        <android.support.design.widget.TextInputLayout
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_weight="0.50"
            android:textColorHint="#fff">
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/register_first_name"
                android:background="@drawable/bg_white_border"
                android:padding="10dp"
                android:layout_margin="5dp"
                android:id="@+id/register_first_name"/>
        </android.support.design.widget.TextInputLayout>
        <android.support.design.widget.TextInputLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.50"
            android:textColorHint="#fff">
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/register_last_name"
                android:id="@+id/register_last_name"
                android:textColorHint="@color/official_hint_color"
                android:background="@drawable/bg_white_border"
                android:padding="10dp"
                android:layout_margin="5dp"/>
        </android.support.design.widget.TextInputLayout>
    </LinearLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:textColorHint="#fff">
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/email"
            android:textColorHint="@color/official_hint_color"
            android:id="@+id/register_email"
            android:background="@drawable/bg_white_border"
            android:padding="10dp"
            android:drawableRight="@mipmap/ico_email_white"
            android:inputType="textEmailAddress"/>
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:textColorHint="#fff">
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/register_phone_number"
            android:id="@+id/register_phone"
            android:textColorHint="@color/official_hint_color"
            android:background="@drawable/bg_white_border"
            android:padding="10dp"
            android:layout_marginBottom="10dp"
            android:drawableRight="@mipmap/ico_phone_white"
            android:inputType="phone"/>
    </android.support.design.widget.TextInputLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Next"
            android:textColor="@color/msafiri_app_color_blue"
            android:background="@drawable/bg_white_round"
            android:id="@+id/register_page_one_next"/>
    </LinearLayout>
</LinearLayout>