<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent" android:gravity="center"
    android:background="@drawable/official_background">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="4dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:padding="20dp"
            android:background="@drawable/bg_white_round">
            <include layout="@layout/include_auth_header"
                android:layout_margin="@dimen/activity_horizontal_margin"
                android:layout_gravity="center_horizontal"
                android:layout_height="150dp"
                android:layout_width="150dp" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp">
                <View
                    android:layout_width="0dp"
                    android:layout_height="1dip"
                    android:layout_weight="0.4"
                    android:background="#000"
                    android:layout_margin="13dp"
                    android:alpha="0.2"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Personal Information"
                    android:textColor="#000"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"/>
                <View
                    android:layout_width="0dp"
                    android:layout_height="1dip"
                    android:alpha="0.2"
                    android:layout_weight="0.4"
                    android:background="#000"
                    android:layout_margin="13dp"/>
            </LinearLayout>

            <include layout="@layout/register_page_two"/>
            <include layout="@layout/register_page_one"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dip"
                android:alpha="0.2"
                android:background="#000"
                android:layout_margin="13dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sign In"
                android:padding="6dp"
                android:textColor="@color/msafiri_app_color_blue"
                android:layout_gravity="center_horizontal"
                android:id="@+id/register_button_login"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>