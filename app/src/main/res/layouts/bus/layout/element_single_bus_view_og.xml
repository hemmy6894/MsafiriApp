<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent" android:background="@color/msafiri_app_background_color">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/background_color_card">

            <TextView
                android:id="@+id/element_single_bus_view_bus_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="13dp"
                android:layout_marginStart="13dp"
                android:text="Display Bus Name"
                android:textColor="@color/text_color_card"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium" />

            <TextView
                android:id="@+id/element_single_bus_view_check_in"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/element_single_bus_view_bus_name"
                android:layout_alignStart="@+id/element_single_bus_view_bus_name"
                android:layout_below="@+id/element_single_bus_view_bus_name"
                android:layout_marginTop="11dp"
                android:text="Check"
                android:textColor="@color/text_color_card" />

            <TextView
                android:id="@+id/element_single_bus_view_bus_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/element_single_bus_view_bus_name"
                android:layout_alignStart="@+id/element_single_bus_view_bus_name"
                android:layout_below="@+id/element_single_bus_view_bus_name"
                android:layout_marginTop="11dp"
                android:text=""
                android:visibility="gone"
                android:textColor="@color/text_color_card"/>

            <TextView
                android:id="@+id/element_single_bus_view_departure"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/element_single_bus_view_check_in"
                android:layout_alignStart="@+id/element_single_bus_view_check_in"
                android:layout_below="@+id/element_single_bus_view_check_in"
                android:layout_marginTop="11dp"
                android:text="Dep :"
                android:textColor="@color/text_color_card"/>

            <TextView
                android:id="@+id/element_single_bus_view_check_in_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/element_single_bus_view_check_in"
                android:layout_alignBottom="@+id/element_single_bus_view_check_in"
                android:layout_alignEnd="@+id/element_single_bus_view_bus_name"
                android:layout_alignRight="@+id/element_single_bus_view_bus_name"
                android:text="06:00"
                android:textColor="@color/text_color_card"/>

            <TextView
                android:id="@+id/element_single_bus_view_departure_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/element_single_bus_view_departure"
                android:layout_alignLeft="@+id/element_single_bus_view_check_in_time"
                android:layout_alignStart="@+id/element_single_bus_view_check_in_time"
                android:text="07:00"
                android:textColor="@color/text_color_card"/>

            <TextView
                android:id="@+id/element_single_bus_view_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/element_single_bus_view_bus_name"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginEnd="14dp"
                android:layout_marginRight="14dp"
                android:text="500,00 Tzs"
                android:textColor="@color/text_color_card"/>

            <TextView
                android:id="@+id/element_single_bus_view_available"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/element_single_bus_view_check_in_time"
                android:layout_alignBottom="@+id/element_single_bus_view_check_in_time"
                android:layout_marginLeft="27dp"
                android:layout_marginStart="27dp"
                android:layout_toEndOf="@+id/element_single_bus_view_check_in_time"
                android:layout_toRightOf="@+id/element_single_bus_view_check_in_time"
                android:text="Available"
                android:textColor="@color/text_color_card"/>

            <TextView
                android:id="@+id/element_single_bus_view_available_seat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/element_single_bus_view_price"
                android:layout_alignRight="@+id/element_single_bus_view_price"
                android:layout_alignTop="@+id/element_single_bus_view_available"
                android:text="30 seat"
                android:textColor="@color/text_color_card"/>

            <Button
                android:id="@+id/element_single_bus_view_button_book_me"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/element_single_bus_view_price"
                android:layout_alignLeft="@+id/element_single_bus_view_available"
                android:layout_alignRight="@+id/element_single_bus_view_price"
                android:layout_alignStart="@+id/element_single_bus_view_available"
                android:layout_alignTop="@+id/element_single_bus_view_departure_time"
                android:text="Book Me"
                android:textAllCaps="false" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>